model UserAuth {
  id String @id @default(cuid())

  email        String @unique
  passwordHash String

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email, userId])
}

model Session {
  id String @id @default(cuid())

  userAgent String   @default("unknown")
  expiresAt DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
